<div class="alert-container text-center">
  <% if flash %>
  <% flash.each do |key, message| %>
  <div class="alert alert-info alert-dismissible" role="alert">
    <%= message %>
    <button type="button" class="close" data-dismiss="alert">
      <span aria-hidden="true">x</span>
    </button>
  </div>
  <% end %>
  <% end %>
</div>
